<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="artistic.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">


<!-- Post content -->
<div class="post_content" tal:condition="context/@@is_anonymous">
    <div class="gallery_single_post"
         tal:define="childNodes python:context.getChildNodes()">
        <div tal:repeat="item childNodes">
                <img tal:attributes="src string:${item/absolute_url}/@@images/image/large;
                                     alt item/title" />
        </div>
    </div>
</div>


<div tal:condition="not:context/@@is_anonymous">
    <div tal:define="childNodes python:context.getChildNodes()">
        <img tal:repeat="item childNodes" tal:attributes="src string:${item/absolute_url}/@@images/image/thumb" />
    </div>
</div>



</metal:content-core>
</metal:content-core>

</body>
</html>

